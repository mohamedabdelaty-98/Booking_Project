@model List<Amenities>;

@{
    ViewData["Title"] = "getall";
}


<div class="container">
    <h4>Amenities</h4>
    <hr />
    <table class="table table-bordered table-hover mx-3">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        @foreach(Amenities amenities in Model)
        {
            <tr>
                <td>@amenities.Id</td>
                <td>@amenities.Name</td>
                <td><a asp-action="getAmenity" asp-route-id="@amenities.Id">Edit</a></td>
                <td><a asp-action="delete" asp-route-id="@amenities.Id">Delete</a></td>

            </tr>

        }

    </table>
</div>


