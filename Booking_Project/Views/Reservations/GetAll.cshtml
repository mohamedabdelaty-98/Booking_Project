@using Booking_Project.Models
@model List<Reservations> 

@{
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>CheckInDate</th>
        <th>CheckOutDate</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>user</th>
        <th>Payments</th>

    </tr>
    <tr>
        @foreach(var reservation in Model)
        {
            <td>@reservation.CheckInDate</td>
            <td>@reservation.CheckOutDate</td>
            <td>@reservation.TotalPrice</td>
            <td>@reservation.Status</td>
            <td>@reservation.user.UserName</td>
            <td>@reservation.payments.PaymentAmount</td>
            
             <div>  <a asp-action="EditReservation" asp-route-id="@reservation?.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteReservation" asp-route-id="@reservation?.Id" class="btn btn-danger"></a>
            </div>
            
        }
    </tr>
    <tr >
    <a asp-action="GetAll" class="btn btn-primary h-25">Back to List</a>
    <a asp-action="AddReservation" class="btn btn-primary h-25">Add Reservation</a>
    </tr>
</table>
