
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        // Define the AJAX call
        $("#loadHotels").click(function () {
            console.log("any");
            $.ajax({
                url: "/hotel/getAll", // Replace with the actual URL
                type: "post",
                success: function (data) {
                    console.log(data);
                    $("#sss").html(data);
                    // $("#hotelsContainer").html(data);
                },
